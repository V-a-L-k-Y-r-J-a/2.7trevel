<Window x:Class="trevel.SearchUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trevel"
        mc:Ignorable="d"
         Title="SearchUser" Height="450" Width="800">
    <Grid>

        <DataGrid Name="Search" Margin="186,35,81,68" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Предмет" Width="200" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Описание" Width="200" Binding="{Binding Desck}"/>
                <DataGridTextColumn Header="Статус задачи" Width="150" Binding="{Binding IdStatusTaskNavigation.Title}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="BackBtn" Content="Назад" HorizontalAlignment="Left" Margin="17,16,0,0" VerticalAlignment="Top" 
                RenderTransformOrigin="-0.21,-0.371" Height="36" Width="102" Click="BackBtn_Click"/>
    </Grid>
</Window>