<Window x:Class="trevel.ViewingUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trevel"
        mc:Ignorable="d"
       Title="ViewingUsers" Height="450" Width="800">
    <Grid Margin="10,0,0,0">
        <Button Margin="10,10,0,352" 
                Content="Назад"
                Width="100"
                Name="BackBtn"
                HorizontalAlignment="Left"
                Click="BackBtn_Click"/>
        <DataGrid Name="OrdersDGrid"
                  AutoGenerateColumns="False"
                  ColumnWidth="*"
                  CanUserAddRows="False"
                  Margin="190,15,25,15"
                  IsReadOnly="True"
                  SelectionChanged="OrdersDGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Пользователи" Binding="{Binding Login}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
